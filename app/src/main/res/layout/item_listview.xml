<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/id_standarImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_thumb_down_24"
            android:contentDescription="@string/imagendeprue" />

        <TextView
            android:id="@+id/id_standard_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/title_standard"
            android:textSize="20dp"
            android:layout_toEndOf="@id/id_standarImage"
            android:padding="5dp"
            android:layout_alignParentTop="true" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_repeatCount="100"
            app:lottie_loop="true"
            android:layout_alignRight="@id/id_standard_txt"
            app:lottie_rawRes="@raw/like"
            android:translationX="110dp">
        </com.airbnb.lottie.LottieAnimationView>

    </RelativeLayout>
</androidx.cardview.widget.CardView>